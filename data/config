# terminal MUST BE SET
# urxvt|xterm|xfce4-terminal|st
# override with --terminal
terminal               = 

# if auto set title is not true, i3term will not
# set the window title to the "path" of the
# terminal (/dev/pts/X) without that path in the
# window title, --palette-menu option will not be
# able to set theme. When set to true, and shell
# is bash i3term will use a custom bashrc when
# opeining a terminal without any commands. The
# first line of that .bashrc is 'unset
# PROMPT_COMMAND' the rest is a copy of ~/.bashrc
auto_set_title         = true

# list available palettes with --list-palettes
# if not set the terminal defaults apply
# override with --palette
default_palette        = 

# the instance name to use if no command is executed
# override with --instance or --role
default_instance       = i3term

# if unset the default terminal font will be used
# override with --font
font_default           = monospace

# font to use when --large-font is set or when
# --autotile spawn a window in autolarge_containers
font_large             = 

# override with --fontsize
font_size_default      = 12

font_size_large        = 

# one or more container characters (example: AC)
# only applies to i3fyra workspace and with --autotile
autolarge_containers   = 

# terminal specific options. don't use these!
xfce4-terminal_options = 
xterm_options          = 
st_options             = 
urxvt_options          = 

